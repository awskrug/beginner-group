---
import Footer from "@components/Footer.astro";
import Head from "@components/Head.astro";
import Header from "@components/Header.astro";
import { SITE } from "@consts";

type Props = {
	title: string;
	description?: string;
};

const { title, description } = Astro.props;
const formattedTitle = title ? `${title} | ${SITE.NAME}` : SITE.NAME;
---

<!doctype html>
<html lang="ko">
  <head>
    <Head title={formattedTitle} description={description} />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
